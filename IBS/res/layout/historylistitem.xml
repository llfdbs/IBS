<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/history_img"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:background="@drawable/empty_photo"
        android:layout_marginTop="15dip" 
       android:layout_marginBottom="15dip"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/history_img"
        android:layout_alignTop="@id/history_img"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/history_img"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/othername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:text="五五"
                android:textColor="#44526A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/otherinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:text="修改了图片"
                android:textColor="#9797A5"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/h_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dip"
            android:paddingLeft="5dip"
            android:text="版本：1122556"
            android:textColor="#B2B2B2"
            android:textSize="10sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/h_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dip"
        android:paddingRight="5dip"
        android:text="04-17 08:15"
        android:textColor="#B2B2B2"
        android:textSize="10sp" />

</RelativeLayout>